<% include partials/head %>
<body id="home">

    <!-- Preloader -->
    <div id="preloader">
        <div id="status"></div>
    </div>

    <!-- NavBar-->
    <nav class="navbar-default stuckMenu isStuck" role="navigation" style="position: fixed; top: 0;">
        <div class="container-fluid">
            <div class="navbar-header">
                <img class="navbar-logo" src="/img/logo.svg">
                <a class="navbar-brand" href="#home">Drill</a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
            <form class="navbar-form navbar-left d-inline-block" style="width:inherit; margin-top: 4px;" role="search">
                    <div class="form-group">
                    <input type="text" class="form-control" name="key" id="key" placeholder="Search Drills" style="width: 400px">
                    </div>
                    <button type="submit" id="search" class="btn btn-primary">Go</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li class="menuItem"><a href="/logout">Logout</a></li>
            </ul>

            </div>
        </div>
    </nav>

<div class="body-wrapper">
    <div class="col-sm-9" style="float: right;">
    <section id="cd-timeline" class="cd-container" style="margin-top: -15px;">
        <div class="cd-timeline-block">
            <div class="cd-timeline-img cd-picture">
                <svg class="cd-timeline-img" style="height: 200px;" viewbox="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                      <defs>
                        <pattern id="img" patternUnits="userSpaceOnUse" width="100" height="100">
                          <image xlink:href="/img/profile-picture.jpg" x="-25" width="150" height="100" />
                        </pattern>
                      </defs>
                      <polygon points="50 1 95 25 95 75 50 99 5 75 5 25" fill="#DEF2FF"/>
                </svg>
            </div> <!-- cd-timeline-img -->

           <% for(var i=0; i<drill.nodes.length; i++) {%>
			<div class="cd-timeline-content">
                <h3><%=drill.nodes[i]["day"]%></h3>
                <p style="white-space: pre-wrap;"><%-drill.nodes[i]["description"]%></p>
            </div> <!-- cd-timeline-content -->
        </div> <!-- cd-timeline-block -->

        <div class="cd-timeline-block">
            <div class="cd-timeline-img cd-picture">
                <svg class="cd-timeline-img" style="height: 200px;" viewbox="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                      <defs>
                        <pattern id="img" patternUnits="userSpaceOnUse" width="100" height="100">
                          <image xlink:href="/img/profile-picture.jpg" x="-25" width="150" height="100" />
                        </pattern>
                      </defs>
                      <polygon points="50 1 95 25 95 75 50 99 5 75 5 25" fill="#DEF2FF"/>
                </svg>
            </div> <!-- cd-timeline-img -->
            
			<% } %>

            <div class="cd-timeline-content">
                <button data-toggle="collapse" data-target="#demo" class="btn wow tada btn-primary ">Add More</button>
                <div id="demo" class="collapse">
            <form role="add"  method="post" name="add" action="/add_node" style="margin-top:10px;">
                <div class="col-md-12">
                <input type="text" id="id" name="id" value="<%=drill.id%>" style="display:none;">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" id="day" name="day" placeholder="Day" required  >
                            <span class="input-group-addon" style="background: #DEF2FF; border: 0"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" id="hashes" name="hashes" placeholder="Tags" required >
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <textarea name="description" id="description" class="form-control" rows="10" required="" placeholder="Description"></textarea>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>

                        </div>
                    </div>
                    <input type="submit" name="submit" id="add" value="Submit" class="btn wow tada btn-embossed btn-primary pull-right">
                </div>
            </form>
                </div>
            </div>
        </div>

    </section> <!-- cd-timeline -->
    </div>
    <div class="col-sm-3 profile-sidebar stuckMenu isStuck text-center" style="position: fixed; top: 60px">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <svg class="drill-logo" viewbox="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                      <defs>
                      </defs>
                      <polygon points="50 1 95 25 95 75 50 99 5 75 5 25" fill="lightpink"/>
                    </svg>
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        <%=drill.drillname%>
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    <button type="button" class="btn btn-primary btn-success">190 Upvotes</button>
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="#">
                            <i class="glyphicon glyphicon-home"></i>
                            Drill View </a>
                        </li>
                        <li>
                            <a href="#">
                            <i class="glyphicon glyphicon-user"></i>
                            Owner Profile </a>
                        </li>
                        <li>
                            <a href="#">
                            <i class="glyphicon glyphicon-flag"></i>
                            Help </a>
                        </li>
                    </ul>
                    <div class="profile-userbuttons">
                        <a href="/profile"><button type="button" class="btn btn-primary btn-warning">Back to Profile</button></a>	
                    </div>
                </div>
                <!-- END MENU -->
            </div>
    </div>

    <!-- JavaScript -->
    <script src="/js/jquery-1.10.2.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/owl.carousel.js"></script>
    <script src="/js/script.js"></script>
    <!-- StikyMenu -->
    <script src="/js/stickUp.min.js"></script>
    <script type="text/javascript">
      jQuery(function($) {
        $(document).ready( function() {
          $('.navbar-default').stickUp();
